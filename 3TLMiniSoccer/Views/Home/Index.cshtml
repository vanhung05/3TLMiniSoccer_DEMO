<!-- Pitch System Section -->
<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="text-center mb-10">
            <h2 class="text-3xl font-bold mb-4" data-aos="fade-up">Hệ thống sân</h2>
            <p class="text-gray-600 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">Lựa chọn sân phù hợp với nhu cầu của bạn</p>
        </div>
        
        <!-- Filters -->
        <div class="flex flex-wrap justify-center gap-4 mb-8" data-aos="fade-up">
            <div class="bg-white border border-gray-200 rounded-full px-4 py-2 flex items-center">
                <span class="mr-2">Loại sân:</span>
                <select class="bg-transparent border-none focus:outline-none">
                    <option>Tất cả</option>
                    <option>5 người</option>
                    <option>7 người</option>
                </select>
            </div>
            <div class="bg-white border border-gray-200 rounded-full px-4 py-2 flex items-center">
                <span class="mr-2">Khung giờ:</span>
                <select class="bg-transparent border-none focus:outline-none">
                    <option>Tất cả</option>
                    <option>Sáng (6h-12h)</option>
                    <option>Chiều (12h-18h)</option>
                    <option>Tối (18h-23h)</option>
                </select>
            </div>
        </div>
        
        <!-- Pitch Cards -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var field in Model.Fields.Take(6))
            {
                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover" data-aos="zoom-in" data-aos-delay="100">
                    @if (!string.IsNullOrEmpty(field.ImageUrl))
                    {
                        <img src="/images/san/@field.ImageUrl" alt="@field.FieldName" class="h-48 w-full object-cover" onerror="this.src='data:image/svg+xml;base64,'">
                    }
                    else
                    {
                        <div class="h-48 placeholder-img"></div>
                    }
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-2">
                            <h3 class="text-xl font-bold">@field.FieldName</h3>
                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">@field.FieldType.TypeName</span>
                        </div>
                        <div class="flex items-center text-gray-600 mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                            <span>@field.FieldType.BasePrice.ToString("N0")đ/giờ</span>
                        </div>
                        <div class="flex justify-between items-center mb-4">
                            <span class="text-lg font-bold text-primary">@field.FieldType.BasePrice.ToString("N0")đ/giờ</span>
                            <div class="flex">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="#f59e0b" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                </svg>
                                <span class="ml-1">4.8</span>
                            </div>
                        </div>
                        <a href="@Url.Action("Details", "Field", new { id = field.FieldId })" class="block text-center bg-primary hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition">Chi tiết sân</a>
                    </div>
                </div>
            }
        </div>
        
        <div class="text-center mt-8" data-aos="fade-up">
            <a href="@Url.Action("Index", "Field")" class="inline-block border border-primary text-primary hover:bg-primary hover:text-white font-medium py-2 px-6 rounded-lg transition">Xem tất cả sân</a>
        </div>
    </div>
</section>


<!-- Shop Teaser Section -->
