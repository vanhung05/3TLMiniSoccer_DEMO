                        <input type="tel" id="phone" name="phone" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition">
                        <p class="mt-1 text-xs text-red-500 hidden" id="phoneError">Vui lòng nhập số điện thoại</p>
                    </div>
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <input type="email" id="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition">
                    <p class="mt-1 text-xs text-red-500 hidden" id="emailError">Email không hợp lệ</p>
                </div>
                <div>
                    <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Chủ đề*</label>
                    <select id="subject" name="subject" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition">
                        <option value="" disabled selected>Chọn chủ đề</option>
                        <option value="booking">Đặt sân bóng</option>
                        <option value="feedback">Góp ý - Khiếu nại</option>
                        <option value="partner">Hợp tác kinh doanh</option>
                        <option value="other">Khác</option>
                    </select>
                    <p class="mt-1 text-xs text-red-500 hidden" id="subjectError">Vui lòng chọn chủ đề</p>
                </div>
                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Nội dung*</label>
                    <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition" placeholder="Vui lòng mô tả chi tiết yêu cầu của bạn..."></textarea>
