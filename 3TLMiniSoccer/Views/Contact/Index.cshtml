@section Scripts {
    <style>
        .faq-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }
        
        .faq-item.active .faq-content {
            max-height: 200px;
        }
    </style>
    
    <script>
        // FAQ Toggle
        document.querySelectorAll('.faq-toggle').forEach(button => {
            button.addEventListener('click', () => {
                const faqItem = button.parentElement;
                const content = button.nextElementSibling;
                const icon = button.querySelector('svg');
                
                // Close other FAQ items
                document.querySelectorAll('.faq-item').forEach(item => {
                    if (item !== faqItem) {
                        item.classList.remove('active');
                        const otherIcon = item.querySelector('.faq-toggle svg');
                        otherIcon.classList.remove('rotate-180');
                    }
                });
                
                // Toggle current FAQ item
                faqItem.classList.toggle('active');
                icon.classList.toggle('rotate-180');
            });
        });

        // Form Validation and Submission
        const contactForm = document.getElementById('contactForm');
        const toast = document.getElementById('toast');

        contactForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            // Reset errors
            document.querySelectorAll('[id$="Error"]').forEach(el => el.classList.add('hidden'));
            
            // Validate form
            let isValid = true;
            const name = document.getElementById('name');
            const phone = document.getElementById('phone');
            const email = document.getElementById('email');
            const subject = document.getElementById('subject');
            const message = document.getElementById('message');
            
            if (!name.value.trim()) {
                document.getElementById('nameError').classList.remove('hidden');
                isValid = false;
            }
            
            if (!phone.value.trim()) {
                document.getElementById('phoneError').classList.remove('hidden');
                isValid = false;
            }
            
            var atSymbol = String.fromCharCode(64);
            var hasAt = email.value.indexOf(atSymbol) > -1;
            var hasDot = email.value.indexOf('.') > -1;
            if (email.value && (!hasAt || !hasDot)) {
                document.getElementById('emailError').classList.remove('hidden');
                isValid = false;
            }
            
            if (!subject.value) {
                document.getElementById('subjectError').classList.remove('hidden');
                isValid = false;
            }
            
            if (!message.value.trim()) {
                document.getElementById('messageError').classList.remove('hidden');
                isValid = false;
            }
            
            if (isValid) {
                // Show toast
                toast.classList.remove('hidden');
                toast.classList.remove('translate-y-10');
                toast.classList.remove('opacity-0');
                
                // Reset form
                contactForm.reset();
                
                // Hide toast after 3 seconds
                setTimeout(() => {
                    toast.classList.add('translate-y-10');
                    toast.classList.add('opacity-0');
                    setTimeout(() => toast.classList.add('hidden'), 300);
                }, 3000);
            }
        });
    </script>
}
