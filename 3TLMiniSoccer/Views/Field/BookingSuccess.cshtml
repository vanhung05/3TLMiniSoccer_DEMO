@model _3TLMiniSoccer.Models.Booking

@{
    ViewData["Title"] = "Đặt sân thành công";
}

@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#16a34a',
                        dark: '#0f172a',
                        accent: '#f59e0b',
                    },
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        .success-animation {
            animation: successPulse 2s ease-in-out infinite;
        }
        
        @@keyframes successPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
    </style>
}

<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
            <!-- Success Icon -->
            <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6 success-animation" data-aos="zoom-in">
                <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            
            <!-- Success Message -->
            <h1 class="text-3xl font-bold text-gray-900 mb-4" data-aos="fade-up" data-aos-delay="200">Đặt sân thành công!</h1>
            <p class="text-lg text-gray-600 mb-8" data-aos="fade-up" data-aos-delay="300">Cảm ơn bạn đã đặt sân. Chúng tôi sẽ liên hệ với bạn để xác nhận.</p>
            
            <!-- Booking Details -->
            <div class="bg-white rounded-xl shadow-lg p-6 mb-8" data-aos="fade-up" data-aos-delay="400">
                <h2 class="text-xl font-bold mb-4 flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    Thông tin đặt sân
                </h2>
                <div class="grid md:grid-cols-2 gap-4 text-left">
                    <div>
                        <span class="font-medium text-gray-700">Mã đặt sân:</span>
                        <span class="text-gray-900">#@Model.BookingId</span>
                    </div>
                    <div>
                        <span class="font-medium text-gray-700">Sân:</span>
                        <span class="text-gray-900">@Model.Field.FieldName</span>
                    </div>
                    <div>
                        <span class="font-medium text-gray-700">Ngày đặt:</span>
                        <span class="text-gray-900">@Model.BookingDate.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div>
                        <span class="font-medium text-gray-700">Thời gian:</span>
                        <span class="text-gray-900">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</span>
                    </div>
                    <div>
                        <span class="font-medium text-gray-700">Số giờ:</span>
                        <span class="text-gray-900">@Model.Duration phút (@((Model.Duration / 60.0).ToString("F1")) giờ)</span>
                    </div>
                    <div>
                        <span class="font-medium text-gray-700">Tổng tiền:</span>
                        <span class="text-gray-900 font-bold text-green-600">@Model.TotalPrice.ToString("N0") VND</span>
                    </div>
                    <div class="md:col-span-2">
                        <span class="font-medium text-gray-700">Trạng thái:</span>
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                            @Model.Status
                        </span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="md:col-span-2">
                            <span class="font-medium text-gray-700">Ghi chú:</span>
                            <span class="text-gray-900">@Model.Notes</span>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center" data-aos="fade-up" data-aos-delay="500">
                <a href="@Url.Action("Index", "Field")" class="bg-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-dark transition-colors flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Đặt sân khác
                </a>
                <a href="@Url.Action("Index", "Home")" class="bg-gray-200 text-gray-800 px-6 py-3 rounded-lg font-medium hover:bg-gray-300 transition-colors flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    Về trang chủ
                </a>
            </div>
            
            <!-- Additional Info -->
            <div class="mt-8 p-4 bg-blue-50 rounded-lg" data-aos="fade-up" data-aos-delay="600">
                <h3 class="font-medium text-blue-900 mb-2 flex items-center">
                    <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Lưu ý quan trọng:
                </h3>
                <ul class="text-sm text-blue-800 text-left space-y-1">
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Vui lòng đến đúng giờ đã đặt</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Liên hệ hotline nếu có thay đổi</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Thanh toán tại sân khi đến chơi</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Initialize AOS animation
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
