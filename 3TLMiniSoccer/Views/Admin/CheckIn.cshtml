@{
    ViewData["Title"] = "Check-in khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-6 bg-gray-50">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
            <i data-lucide="log-in" class="w-8 h-8 inline mr-2"></i>Check-in khách hàng
        </h1>
        <p class="text-gray-600">Nhập mã booking để check-in khách hàng</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["Success"]</span>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["Error"]</span>
        </div>
    }

    <!-- Check-in Form -->
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-6">
            <form asp-action="CheckIn" method="post" class="space-y-6">
                <div>
                    <label for="bookingCode" class="block text-sm font-medium text-gray-700 mb-2">
                        <i data-lucide="hash" class="w-4 h-4 inline mr-2"></i>Mã Booking
                    </label>
                    <input type="text" 
                           id="bookingCode" 
                           name="bookingCode" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           placeholder="Nhập mã booking (VD: BK20251020203531)..."
                           pattern="BK[0-9]+"
                           title="Mã booking phải bắt đầu bằng BK và theo sau là số"
                           required>
                    <p class="text-sm text-gray-500 mt-1">Nhập mã booking để tìm kiếm thông tin</p>
                </div>

                <div>
                    <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">
                        <i data-lucide="sticky-note" class="w-4 h-4 inline mr-2"></i>Ghi chú (tùy chọn)
                    </label>
                    <textarea name="notes" 
                              id="notes" 
                              rows="3" 
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                              placeholder="Nhập ghi chú nếu có..."></textarea>
                </div>

                <div class="flex gap-4">
                    <button type="submit" 
                            class="flex-1 bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition">
                        <i data-lucide="log-in" class="w-4 h-4 inline mr-2"></i>
                        Check-in ngay
                    </button>
                    <a asp-action="Sessions" 
                       class="flex-1 bg-gray-600 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-lg transition text-center">
                        <i data-lucide="arrow-left" class="w-4 h-4 inline mr-2"></i>
                        Quay lại
                    </a>
                </div>
            </form>
        </div>

        <!-- Instructions -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-blue-900 mb-3">
                <i data-lucide="info" class="w-5 h-5 inline mr-2"></i>Hướng dẫn check-in
            </h3>
            <ul class="space-y-2 text-blue-800">
                <li class="flex items-start">
                    <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                    <span>Nhập mã booking chính xác để tìm kiếm thông tin</span>
                </li>
                <li class="flex items-start">
                    <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                    <span>Hệ thống sẽ kiểm tra trạng thái booking trước khi check-in</span>
                </li>
                <li class="flex items-start">
                    <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                    <span>Sau khi check-in thành công, có thể thêm sản phẩm cho khách</span>
                </li>
                <li class="flex items-start">
                    <i data-lucide="check-circle" class="w-4 h-4 text-green-500 mr-2 mt-1 flex-shrink-0"></i>
                    <span>Check-out khi khách kết thúc sử dụng sân</span>
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    </script>
    <script>
        // Focus on booking ID input
        document.getElementById('bookingId').focus();
        
        // Auto-submit on Enter
        document.getElementById('bookingId').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                this.form.submit();
            }
        });
    </script>
}
