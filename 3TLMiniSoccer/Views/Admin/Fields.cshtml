@model _3TLMiniSoccer.ViewModels.FieldListViewModel
@{
    ViewData["Title"] = "Quản lý sân bóng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-2xl font-bold text-gray-800 mb-6">Quản lý sân bóng</h1>

<!-- Quick Stats -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Fields -->
  <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-blue-100 text-blue-500">
        <i data-lucide="stadium" class="w-6 h-6"></i>
      </div>
      <div class="ml-4">
        <p class="text-sm text-gray-500">Tổng số sân</p>
        <p class="text-2xl font-bold">@Model.Stats.TotalFields</p>
        <p class="text-xs text-gray-400">Tất cả</p>
      </div>
    </div>
  </div>
  
  <!-- Active Fields -->
  <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-green-100 text-green-500">
        <i data-lucide="check-circle" class="w-6 h-6"></i>
      </div>
      <div class="ml-4">
        <p class="text-sm text-gray-500">Sân hoạt động</p>
        <p class="text-2xl font-bold">@Model.Stats.ActiveFields</p>
        <p class="text-xs text-gray-400">@Model.Stats.ActivePercentage.ToString("F1")%</p>
      </div>
    </div>
  </div>
  
  <!-- Maintenance Fields -->
  <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-yellow-100 text-yellow-500">
        <i data-lucide="wrench" class="w-6 h-6"></i>
      </div>
      <div class="ml-4">
        <p class="text-sm text-gray-500">Đang bảo trì</p>
        <p class="text-2xl font-bold">@Model.Stats.MaintenanceFields</p>
        <p class="text-xs text-gray-400">@Model.Stats.MaintenancePercentage.ToString("F1")%</p>
      </div>
    </div>
  </div>
  
  <!-- Inactive Fields -->
  <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-red-100 text-red-500">
        <i data-lucide="x-circle" class="w-6 h-6"></i>
      </div>
      <div class="ml-4">
        <p class="text-sm text-gray-500">Không hoạt động</p>
        <p class="text-2xl font-bold">@Model.Stats.InactiveFields</p>
        <p class="text-xs text-gray-400">@Model.Stats.InactivePercentage.ToString("F1")%</p>
      </div>
    </div>
  </div>
</div>

<!-- Tab Navigation -->
<div class="bg-white rounded-lg shadow mb-6">
    <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8 px-6" aria-label="Tabs">
            <button onclick="switchTab('fields')" id="fields-tab" class="tab-button active border-green-500 text-green-600 py-4 px-1 border-b-2 font-medium text-sm">
                <span class="flex items-center">
                    <i data-lucide="stadium" class="w-4 h-4 mr-2"></i>
                    Quản lý sân bóng
                </span>
            </button>
            <button onclick="switchTab('pricing')" id="pricing-tab" class="tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 py-4 px-1 border-b-2 font-medium text-sm">
                <span class="flex items-center">
                    <i data-lucide="dollar-sign" class="w-4 h-4 mr-2"></i>
                    Quy tắc giá
                </span>
            </button>
        </nav>
    </div>
</div>

<!-- Fields Tab Content -->
<div id="fields-content" class="tab-content">
<!-- Filters -->
<div class="bg-white rounded-lg shadow p-6 mb-6">
  <form method="get" action="/Admin/Fields">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Tìm kiếm theo tên sân</label>
        <input type="text" name="SearchTerm" value="@Model.Filter.SearchTerm" placeholder="Nhập tên sân..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Loại sân</label>
        <select name="FieldType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
          <option value="">Tất cả loại sân</option>
          @if (ViewBag.FieldTypes != null)
          {
            @foreach (var fieldType in (List<_3TLMiniSoccer.Models.FieldType>)ViewBag.FieldTypes)
            {
              @if (Model.Filter.FieldType == fieldType.FieldTypeId.ToString())
              {
                <option value="@fieldType.FieldTypeId" selected="selected">Sân @fieldType.PlayerCount người</option>
              }
              else
              {
                <option value="@fieldType.FieldTypeId">Sân @fieldType.PlayerCount người</option>
              }
            }
          }
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Trạng thái</label>
        <select name="Status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
          <option value="">Tất cả trạng thái</option>
          @if (Model.Filter.Status == "Active")
          {
            <option value="Active" selected="selected">Hoạt động</option>
          }
          else
          {
            <option value="Active">Hoạt động</option>
          }
          @if (Model.Filter.Status == "Maintenance")
          {
            <option value="Maintenance" selected="selected">Bảo trì</option>
          }
          else
          {
            <option value="Maintenance">Bảo trì</option>
          }
          @if (Model.Filter.Status == "Inactive")
          {
            <option value="Inactive" selected="selected">Không hoạt động</option>
          }
          else
          {
            <option value="Inactive">Không hoạt động</option>
          }
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Mức giá</label>
        <select name="PriceRange" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
          <option value="">Tất cả mức giá</option>
          @if (Model.Filter.PriceRange == "low")
          {
            <option value="low" selected="selected">Dưới 300.000₫</option>
          }
          else
          {
            <option value="low">Dưới 300.000₫</option>
          }
          @if (Model.Filter.PriceRange == "medium")
          {
            <option value="medium" selected="selected">300.000₫ - 500.000₫</option>
          }
          else
          {
            <option value="medium">300.000₫ - 500.000₫</option>
          }
          @if (Model.Filter.PriceRange == "high")
          {
            <option value="high" selected="selected">Trên 500.000₫</option>
          }
          else
          {
            <option value="high">Trên 500.000₫</option>
          }
        </select>
      </div>
    </div>
    <div class="mt-4 flex justify-end space-x-2">
      <a href="/Admin/Fields" class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition-colors">
        <i data-lucide="x" class="w-4 h-4 inline mr-2"></i>
        Xóa bộ lọc
      </a>
      <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors">
        <i data-lucide="search" class="w-4 h-4 inline mr-2"></i>
        Tìm kiếm
      </button>
    </div>
  </form>
</div>

<!-- Fields Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
    <h3 class="text-lg font-semibold text-gray-800">Danh sách sân bóng</h3>
    <button class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors" onclick="openAddFieldModal()">
      <i data-lucide="plus" class="w-4 h-4 inline mr-2"></i>
      Thêm sân bóng
    </button>
  </div>
  
  <div class="overflow-x-auto">
    @if (Model.Fields.Any())
    {
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hình ảnh</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên sân</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Loại sân</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giá thuê</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vị trí</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày tạo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          @foreach (var field in Model.Fields)
          {
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex-shrink-0 h-16 w-16">
                  @if (!string.IsNullOrEmpty(field.ImageUrl))
                  {
                    <img class="h-16 w-16 rounded-lg object-cover border border-gray-200" src="/images/san/@field.ImageUrl" alt="@field.FieldName" onerror="this.src='data:image/svg+xml;base64,'">
                  }
                  else
                  {
                    <div class="h-16 w-16 rounded-lg bg-gray-200 flex items-center justify-center border border-gray-200">
                      <i data-lucide="stadium" class="w-8 h-8 text-gray-400"></i>
                    </div>
                  }
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex flex-col">
                  <div class="text-sm font-medium text-gray-900">@field.FieldName</div>
                  @if (!string.IsNullOrEmpty(field.Description))
                  {
                    <div class="text-sm text-gray-500 truncate max-w-xs" title="@field.Description">@field.Description</div>
                  }
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex flex-col">
                  <div class="text-sm font-medium text-gray-900">@field.FieldTypeDisplay</div>
                  <div class="text-sm text-gray-500">@field.SizeDisplay</div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">@field.FormattedPrice</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center text-sm text-gray-900">
                  <i data-lucide="map-pin" class="w-4 h-4 mr-2 text-gray-400"></i>
                  @field.Location
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @field.StatusClass">
                  @field.StatusText
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                @field.CreatedAt.ToString("dd/MM/yyyy")
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2">
                  <button class="text-blue-600 hover:text-blue-900 transition-colors" onclick="editField(@field.FieldId)" title="Chỉnh sửa">
                    <i data-lucide="edit" class="w-4 h-4"></i>
                  </button>
                  <button class="text-red-600 hover:text-red-900 transition-colors" onclick="deleteField(@field.FieldId)" title="Xóa">
                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                  </button>
                  <button class="text-green-600 hover:text-green-900 transition-colors" onclick="viewFieldDetails(@field.FieldId)" title="Xem chi tiết">
                    <i data-lucide="eye" class="w-4 h-4"></i>
                  </button>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    }
    else
    {
      <div class="text-center py-12">
        <i data-lucide="stadium" class="w-16 h-16 mx-auto text-gray-400 mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có sân bóng nào</h3>
        <p class="text-gray-500 mb-4">Bắt đầu bằng cách thêm sân bóng đầu tiên của bạn.</p>
        <button class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors" onclick="openAddFieldModal()">
          <i data-lucide="plus" class="w-4 h-4 inline mr-2"></i>
          Thêm sân bóng
        </button>
      </div>
    }
  </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
  <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
    <div class="flex-1 flex justify-between sm:hidden">
      @if (Model.CurrentPage > 1)
      {
        <a href="?SearchTerm=@Model.Filter.SearchTerm&FieldType=@Model.Filter.FieldType&Status=@Model.Filter.Status&PriceRange=@Model.Filter.PriceRange&Page=@(Model.CurrentPage - 1)" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Trước
        </a>
      }
      @if (Model.CurrentPage < Model.TotalPages)
      {
        <a href="?SearchTerm=@Model.Filter.SearchTerm&FieldType=@Model.Filter.FieldType&Status=@Model.Filter.Status&PriceRange=@Model.Filter.PriceRange&Page=@(Model.CurrentPage + 1)" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          Sau
        </a>
      }
    </div>
    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
      <div>
        <p class="text-sm text-gray-700">
          Hiển thị <span class="font-medium">@((Model.CurrentPage - 1) * Model.PageSize + 1)</span> đến <span class="font-medium">@Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalFields)</span> trong tổng số <span class="font-medium">@Model.TotalFields</span> sân
        </p>
      </div>
      <div>
        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
          @if (Model.CurrentPage > 1)
          {
            <a href="?SearchTerm=@Model.Filter.SearchTerm&FieldType=@Model.Filter.FieldType&Status=@Model.Filter.Status&PriceRange=@Model.Filter.PriceRange&Page=@(Model.CurrentPage - 1)" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
              <i data-lucide="chevron-left" class="w-5 h-5"></i>
            </a>
          }
          
          @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
          {
            @if (i == Model.CurrentPage)
            {
              <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-green-50 text-sm font-medium text-green-600">
                @i
              </span>
            }
            else
            {
              <a href="?SearchTerm=@Model.Filter.SearchTerm&FieldType=@Model.Filter.FieldType&Status=@Model.Filter.Status&PriceRange=@Model.Filter.PriceRange&Page=@i" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                @i
              </a>
            }
          }
          
          @if (Model.CurrentPage < Model.TotalPages)
          {
            <a href="?SearchTerm=@Model.Filter.SearchTerm&FieldType=@Model.Filter.FieldType&Status=@Model.Filter.Status&PriceRange=@Model.Filter.PriceRange&Page=@(Model.CurrentPage + 1)" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
              <i data-lucide="chevron-right" class="w-5 h-5"></i>
            </a>
          }
        </nav>
      </div>
    </div>
  </div>
}

<!-- Add Field Modal -->
<div id="fieldModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
<div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <h3 class="text-lg font-semibold text-gray-800" id="modalTitle">Thêm sân bóng mới</h3>
        <button onclick="closeFieldModal()" class="text-gray-400 hover:text-gray-600">
          <i data-lucide="x" class="w-6 h-6"></i>
        </button>
      </div>
      
      <form class="p-6 space-y-4" id="fieldForm">
        <input type="hidden" name="FieldId" id="fieldId" value="">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Tên sân *</label>
            <input type="text" name="FieldName" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Loại sân *</label>
            <select name="FieldTypeId" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
              <option value="">Chọn loại sân</option>
              @if (ViewBag.FieldTypes != null)
              {
                @foreach (var fieldType in (List<_3TLMiniSoccer.Models.FieldType>)ViewBag.FieldTypes)
                {
                  <option value="@fieldType.FieldTypeId">Sân @fieldType.TypeName - @fieldType.BasePrice.ToString("N0")₫/giờ</option>
                }
              }
            </select>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Vị trí *</label>
            <input type="text" name="Location" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ví dụ: Tầng 1, Khu A">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Trạng thái</label>
            <select name="Status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
              <option value="Active">Hoạt động</option>
              <option value="Maintenance">Bảo trì</option>
              <option value="Inactive">Không hoạt động</option>
            </select>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Giờ mở sân</label>
            <input type="time" name="OpeningTime" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" value="06:00">
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Giờ đóng sân</label>
            <input type="time" name="ClosingTime" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" value="23:00">
          </div>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Mô tả</label>
          <textarea name="Description" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Nhập mô tả sân..."></textarea>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Hình ảnh sân</label>
          <div class="space-y-3">
            <input type="file" id="imageFile" name="ImageFile" accept="image/*" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
            <div class="text-sm text-gray-500">
              <p>• Định dạng: JPG, PNG, WebP</p>
              <p>• Kích thước tối đa: 5MB</p>
              <p>• Khuyến nghị: 1920x1080px</p>
            </div>
            <div id="imagePreview" class="hidden">
              <img id="previewImg" class="w-32 h-24 object-cover rounded-lg border border-gray-200" alt="Preview">
            </div>
          </div>
        </div>
        
        <div class="flex justify-end space-x-3 pt-4">
          <button type="button" onclick="closeFieldModal()" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
            Hủy
          </button>
          <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600">
            <span id="submitText">Thêm sân</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>

<!-- Pricing Rules Tab Content -->
<div id="pricing-content" class="tab-content hidden">
  <!-- Pricing Rules Filters -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Loại sân</label>
        <select id="pricingFieldTypeFilter" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
          <option value="">Tất cả loại sân</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Thứ trong tuần</label>
        <select id="pricingDayFilter" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
          <option value="">Tất cả thứ</option>
          <option value="1">Thứ 2</option>
          <option value="2">Thứ 3</option>
          <option value="3">Thứ 4</option>
          <option value="4">Thứ 5</option>
          <option value="5">Thứ 6</option>
          <option value="6">Thứ 7</option>
          <option value="7">Chủ nhật</option>
        </select>
      </div>
