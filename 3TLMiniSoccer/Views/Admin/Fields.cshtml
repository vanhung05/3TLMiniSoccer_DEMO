  async function loadPricingRules() {
    try {
      console.log('Loading pricing rules...');
      const fieldTypeId = document.getElementById('pricingFieldTypeFilter').value;
      const dayOfWeek = document.getElementById('pricingDayFilter').value;
      const status = document.getElementById('pricingStatusFilter').value;
      
      let url = '/Admin/GetPricingRules';
      const params = new URLSearchParams();
      if (fieldTypeId) params.append('fieldTypeId', fieldTypeId);
      if (dayOfWeek) params.append('dayOfWeek', dayOfWeek);
      if (status) params.append('status', status);
      
      if (params.toString()) {
        url += '?' + params.toString();
      }
      
      console.log('Fetching URL:', url);
      const response = await fetch(url);
      const result = await response.json();
      
      console.log('Pricing rules response:', result);
      
      if (result.success) {
        console.log('Displaying pricing rules:', result.data);
        displayPricingRules(result.data);
      } else {
        console.error('Error loading pricing rules:', result.message);
        alert('Lỗi khi tải danh sách quy tắc giá: ' + result.message);
      }
    } catch (error) {
      console.error('Error loading pricing rules:', error);
      alert('Có lỗi xảy ra khi tải danh sách quy tắc giá');
    }
  }

  function displayPricingRules(pricingRules) {
    console.log('Displaying pricing rules:', pricingRules);
    const tbody = document.getElementById('pricingRulesTableBody');
    if (!tbody) {
      console.error('Pricing rules table body not found!');
      return;
    }
    
    tbody.innerHTML = '';
    
    if (pricingRules.length === 0) {
      tbody.innerHTML = '<tr><td colspan="7" class="px-6 py-4 text-center text-gray-500">Không có quy tắc giá nào</td></tr>';
      return;
    }
    
    pricingRules.forEach(rule => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${rule.fieldTypeName || 'N/A'}</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${getDayName(rule.dayOfWeek)}</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${formatTime(rule.startTime)} - ${formatTime(rule.endTime)}</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${formatCurrency(rule.price)}</td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
          ${rule.isPeakHour ? 
            `<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <i data-lucide="trending-up" class="w-3 h-3 mr-1"></i>
              ${rule.peakMultiplier}x
            </span>` : 
            '<span class="text-gray-400">-</span>'
          }
