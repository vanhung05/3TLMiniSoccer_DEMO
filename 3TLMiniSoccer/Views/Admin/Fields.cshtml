    document.getElementById('fieldId').value = '';
  }
  
  async function editField(fieldId) {
    try {
      console.log('Fetching field data for ID:', fieldId);
      const response = await fetch(`/Admin/GetField/${fieldId}`);
      const result = await response.json();
      console.log('API Response:', result);
      
      if (result.success) {
        isEditMode = true;
        currentFieldId = fieldId;
        
        // Fill form with field data
        try {
          const form = document.getElementById('fieldForm');
          console.log('Form found:', form);
          console.log('Form fields:', {
            FieldId: form.FieldId,
            FieldName: form.FieldName,
            FieldTypeId: form.FieldTypeId,
            Location: form.Location,
            Status: form.Status,
            Description: form.Description
          });
          
          form.FieldId.value = fieldId;
          form.FieldName.value = result.data.fieldName;
          form.FieldTypeId.value = result.data.fieldTypeId;
          form.Location.value = result.data.location;
          form.Status.value = result.data.status;
          form.Description.value = result.data.description || '';
