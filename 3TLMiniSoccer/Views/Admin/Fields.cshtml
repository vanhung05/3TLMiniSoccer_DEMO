        alert('Không thể lấy thông tin sân: ' + result.message);
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Có lỗi xảy ra khi lấy thông tin sân');
    }
  }
  
  async function deleteField(fieldId) {
