          <button onclick="editPricingRule(${rule.pricingRuleId})" class="text-indigo-600 hover:text-indigo-900 mr-3">
            <i data-lucide="edit" class="w-4 h-4"></i>
          </button>
          <button onclick="deletePricingRule(${rule.pricingRuleId})" class="text-red-600 hover:text-red-900">
            <i data-lucide="trash-2" class="w-4 h-4"></i>
          </button>
        </td>
      `;
      tbody.appendChild(row);
    });
    
    // Re-initialize Lucide icons
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  }

  function getDayName(dayOfWeek) {
    const days = ['', 'Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7', 'Chủ nhật'];
    return days[dayOfWeek] || 'N/A';
  }

  function formatCurrency(amount) {
    return new Intl.NumberFormat('vi-VN', {
      style: 'currency',
      currency: 'VND'
    }).format(amount);
  }

  function formatDate(dateString) {
    return new Date(dateString).toLocaleDateString('vi-VN');
  }

  function formatTime(timeString) {
    // Handle both TimeSpan format (HH:mm:ss) and direct time format
    if (timeString && timeString.includes(':')) {
      const timeParts = timeString.split(':');
      return `${timeParts[0]}:${timeParts[1]}`;
    }
    return timeString || 'N/A';
  }

  function clearPricingFilters() {
    document.getElementById('pricingFieldTypeFilter').value = '';
    document.getElementById('pricingDayFilter').value = '';
    document.getElementById('pricingStatusFilter').value = '';
    loadPricingRules();
  }

  function openAddPricingRuleModal() {
    isPricingEditMode = false;
    currentPricingRuleId = null;
    document.getElementById('pricingRuleModal').classList.remove('hidden');
    document.getElementById('pricingModalTitle').textContent = 'Thêm quy tắc giá mới';
    document.getElementById('pricingSubmitText').textContent = 'Thêm quy tắc';
    document.getElementById('pricingRuleForm').reset();
    document.getElementById('pricingRuleId').value = '0';
    
    // Set default effective from date to today
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('pricingEffectiveFrom').value = today;
  }

  async function editPricingRule(pricingRuleId) {
    try {
      const response = await fetch(`/Admin/GetPricingRule/${pricingRuleId}`);
      const result = await response.json();
      
      if (result.success) {
        isPricingEditMode = true;
        currentPricingRuleId = pricingRuleId;
        
        // Fill form with pricing rule data
        document.getElementById('pricingRuleId').value = result.data.pricingRuleId;
        document.getElementById('pricingFieldTypeId').value = result.data.fieldTypeId;
        document.getElementById('pricingDayOfWeek').value = result.data.dayOfWeek;
        document.getElementById('pricingStartTime').value = result.data.startTime;
        document.getElementById('pricingEndTime').value = result.data.endTime;
        document.getElementById('pricingPrice').value = result.data.price;
        document.getElementById('pricingIsPeakHour').checked = result.data.isPeakHour;
        document.getElementById('pricingPeakMultiplier').value = result.data.peakMultiplier;
        document.getElementById('pricingEffectiveFrom').value = result.data.effectiveFrom;
        document.getElementById('pricingEffectiveTo').value = result.data.effectiveTo || '';
        
        document.getElementById('pricingRuleModal').classList.remove('hidden');
        document.getElementById('pricingModalTitle').textContent = 'Chỉnh sửa quy tắc giá';
        document.getElementById('pricingSubmitText').textContent = 'Cập nhật';
      } else {
        alert('Không thể lấy thông tin quy tắc giá: ' + result.message);
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Có lỗi xảy ra khi lấy thông tin quy tắc giá');
    }
  }

  async function deletePricingRule(pricingRuleId) {
    if (!confirm('Bạn có chắc chắn muốn xóa quy tắc giá này?')) {
      return;
    }
    
    try {
      console.log('Deleting pricing rule:', pricingRuleId);
      const response = await fetch(`/Admin/DeletePricingRule/${pricingRuleId}`, {
        method: 'DELETE'
      });
      const result = await response.json();
      
      console.log('Delete response:', result);
      
      if (result.success) {
        alert(result.message);
        console.log('Reloading pricing rules...');
        await loadPricingRules();
        console.log('Pricing rules reloaded');
      } else {
        alert('Lỗi: ' + result.message);
      }
    } catch (error) {
      console.error('Error deleting pricing rule:', error);
      alert('Có lỗi xảy ra khi xóa quy tắc giá');
    }
  }

  function closePricingRuleModal() {
    document.getElementById('pricingRuleModal').classList.add('hidden');
  }

  // Handle pricing rule form submission
  document.getElementById('pricingRuleForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());
    
    // Convert form data to proper types
    const pricingRuleData = {
      PricingRuleId: parseInt(data.PricingRuleId) || 0,
      FieldTypeId: parseInt(data.FieldTypeId),
      DayOfWeek: parseInt(data.DayOfWeek),
      StartTime: data.StartTime,
      EndTime: data.EndTime,
      Price: parseFloat(data.Price),
      IsPeakHour: data.IsPeakHour === 'on',
      PeakMultiplier: parseFloat(data.PeakMultiplier) || 1.0,
      EffectiveFrom: data.EffectiveFrom,
      EffectiveTo: data.EffectiveTo || null
    };
    
    try {
      const url = isPricingEditMode ? '/Admin/UpdatePricingRule' : '/Admin/CreatePricingRule';
      const response = await fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(pricingRuleData)
      });
      
      const result = await response.json();
      
      if (result.success) {
        alert(result.message);
        closePricingRuleModal();
        loadPricingRules();
      } else {
        alert('Lỗi: ' + result.message);
        if (result.errors) {
          console.error('Validation errors:', result.errors);
        }
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Có lỗi xảy ra khi lưu quy tắc giá');
    }
  });

  // Close pricing modal when clicking outside
  document.getElementById('pricingRuleModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closePricingRuleModal();
    }
  });
</script>