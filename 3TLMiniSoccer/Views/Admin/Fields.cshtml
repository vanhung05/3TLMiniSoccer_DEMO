          alert('Lỗi khi điền form: ' + formError.message);
          return;
        }
        
        // Show current image if exists
        try {
          if (result.data.imageUrl) {
            const imagePreview = document.getElementById('imagePreview');
            const previewImg = document.getElementById('previewImg');
            console.log('Image elements:', { imagePreview, previewImg });
            previewImg.src = `/images/san/${result.data.imageUrl}`;
            imagePreview.classList.remove('hidden');
          }
        } catch (imageError) {
          console.error('Error handling image:', imageError);
          // Don't show alert for image error, just log it
        }
        
        // Show modal
        try {
          document.getElementById('fieldModal').classList.remove('hidden');
          document.getElementById('modalTitle').textContent = 'Chỉnh sửa sân bóng';
          document.getElementById('submitText').textContent = 'Cập nhật';
