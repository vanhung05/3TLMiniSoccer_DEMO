            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Doanh thu</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          @foreach (var customer in Model.TopProductCustomers)
          {
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@customer.Rank</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@customer.CustomerName</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@customer.PhoneNumber</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@customer.OrderCount</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-600">@customer.Revenue.ToString("N0") ₫</td>
            </tr>
          }
          @if (!Model.TopProductCustomers.Any())
          {
            <tr>
              <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">Chưa có dữ liệu</td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>