@model _3TLMiniSoccer.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    ViewData["Description"] = "Đăng ký tài khoản 3TL Mini Soccer để trải nghiệm dịch vụ đặt sân và quản lý đội bóng";
}

<!-- Register Section -->
<section class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl w-full space-y-8" data-aos="fade-up">
        <div class="text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Tạo tài khoản mới</h2>
            <p class="text-gray-600">Tham gia cộng đồng 3TL Mini Soccer ngay hôm nay</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-lg p-8">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
                    @TempData["SuccessMessage"]
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                    @TempData["ErrorMessage"]
                </div>
            }
            
            <form asp-action="Register" asp-controller="Account" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
                
                <!-- Two Column Layout -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Left Column -->
                    <div class="space-y-6">
                        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Thông tin đăng nhập</h3>
                        
                        <!-- Username Input -->
                        <div class="floating-label">
                            <input 
                                asp-for="Username"
                                type="text" 
                                placeholder=" "
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                required
                            >
                            <label asp-for="Username">Tên đăng nhập</label>
                        </div>
                        <span asp-validation-for="Username" class="text-red-600 text-sm"></span>
                        
                        <!-- Email Input -->
                        <div class="floating-label">
                            <input 
                                asp-for="Email"
                                type="email" 
                                placeholder=" "
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                required
                            >
                            <label asp-for="Email">Email</label>
                        </div>
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                        
                        <!-- Password Input -->
                        <div class="floating-label">
                            <input 
                                asp-for="Password"
                                type="password" 
                                placeholder=" "
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                required
                            >
                            <label asp-for="Password">Mật khẩu</label>
                            <!-- Password Strength Indicator -->
                            <div class="mt-2">
                                <div class="password-strength bg-gray-200"></div>
                                <p class="text-xs text-gray-500 mt-1" id="passwordStrengthText">Nhập mật khẩu để kiểm tra độ mạnh</p>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                        
                        <!-- Confirm Password Input -->
                        <div class="floating-label">
                            <input 
                                asp-for="ConfirmPassword"
                                type="password" 
                                placeholder=" "
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                required
                            >
                            <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                    </div>
                    
                    <!-- Right Column -->
                    <div class="space-y-6">
                        <h3 class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2">Thông tin cá nhân</h3>
                        
                        <!-- First Name Input -->
                        <div class="floating-label">
                            <input 
                                asp-for="FirstName"
                                type="text" 
                                placeholder=" "
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                required
                            >
                            <label asp-for="FirstName">Họ</label>
                        </div>
                        <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
                        
                        <!-- Last Name Input -->
                        <div class="floating-label">
                            <input 
                                asp-for="LastName"
                                type="text" 
                                placeholder=" "
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                required
                            >
                            <label asp-for="LastName">Tên</label>
                        </div>
                        <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
                        
                        <!-- Phone Input -->
                        <div class="floating-label">
                            <input 
                                asp-for="PhoneNumber"
                                type="tel" 
                                placeholder=" "
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                            <label asp-for="PhoneNumber">Số điện thoại</label>
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm"></span>
                        
                        <!-- Date of Birth -->
                        <div class="floating-label">
                            <input 
                                asp-for="DateOfBirth"
                                type="date" 
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                            <label asp-for="DateOfBirth" class="!relative !transform-none !text-gray-500">Ngày sinh</label>
                        </div>
                        <span asp-validation-for="DateOfBirth" class="text-red-600 text-sm"></span>
                        
                        <!-- Gender Selection -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-3">Giới tính</label>
                            <div class="grid grid-cols-3 gap-3">
                                <label class="gender-option flex items-center justify-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition">
                                    <input asp-for="Gender" type="radio" value="Nam" class="sr-only">
                                    <span class="text-sm">Nam</span>
                                </label>
                                <label class="gender-option flex items-center justify-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition">
                                    <input asp-for="Gender" type="radio" value="Nữ" class="sr-only">
                                    <span class="text-sm">Nữ</span>
                                </label>
                                <label class="gender-option flex items-center justify-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition">
                                    <input asp-for="Gender" type="radio" value="Khác" class="sr-only">
                                    <span class="text-sm">Khác</span>
                                </label>
                            </div>
                        </div>
                        <span asp-validation-for="Gender" class="text-red-600 text-sm"></span>
                        
                        <!-- Address Input -->
                        <div class="floating-label">
                            <input 
                                asp-for="Address"
                                type="text" 
                                placeholder=" "
                                class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                            >
                            <label asp-for="Address">Địa chỉ</label>
                        </div>
                        <span asp-validation-for="Address" class="text-red-600 text-sm"></span>
                    </div>
                </div>
                
                <!-- Submit Button -->
                <button 
                    type="submit" 
                    class="btn-primary w-full py-3 px-4 rounded-lg text-white font-medium text-lg"
                >
                    Tạo tài khoản
                </button>
                
                <!-- Divider -->
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Hoặc</span>
                    </div>
                </div>
                
                <!-- Social Register -->
                <div class="grid grid-cols-2 gap-3">
                    <button type="button" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition">
                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        <span class="ml-2">Google</span>
                    </button>
                    <button type="button" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition">
                        <svg class="w-5 h-5" fill="#1877F2" viewBox="0 0 24 24">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                        <span class="ml-2">Facebook</span>
                    </button>
                </div>
            </form>
            
            <!-- Login Link -->
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Đã có tài khoản? 
                    <a asp-controller="Account" asp-action="Login" class="text-primary hover:text-green-700 font-medium transition">
                        Đăng nhập ngay
                    </a>
                </p>
            </div>
        </div>
        
        <!-- Benefits -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
            <div class="text-center p-4 bg-white rounded-lg shadow-sm">
                <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#16a34a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                </div>
                <h3 class="font-medium text-gray-900 mb-1">Đặt sân ưu tiên</h3>
                <p class="text-sm text-gray-600">Đặt sân trước và nhận ưu đãi đặc biệt</p>
            </div>
            <div class="text-center p-4 bg-white rounded-lg shadow-sm">
                <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#16a34a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                </div>
                <h3 class="font-medium text-gray-900 mb-1">Tích điểm thưởng</h3>
                <p class="text-sm text-gray-600">Tích điểm cho mỗi lần sử dụng dịch vụ</p>
            </div>
            <div class="text-center p-4 bg-white rounded-lg shadow-sm">
                <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#16a34a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <h3 class="font-medium text-gray-900 mb-1">Tham gia giải đấu</h3>
                <p class="text-sm text-gray-600">Đăng ký tham gia các giải đấu thường niên</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <style>
        .floating-label {
            position: relative;
        }
        
        .floating-label input:focus + label,
        .floating-label input:not(:placeholder-shown) + label {
            transform: translateY(-1.5rem) scale(0.85);
            color: #16a34a;
        }
        
        .floating-label label {
            position: absolute;
            left: 1rem;
            top: 1rem;
            transition: all 0.3s ease;
            pointer-events: none;
            color: #6b7280;
        }
        
        .form-input {
            transition: all 0.3s ease;
        }
        
        .form-input:focus {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(22, 163, 74, 0.15);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(22, 163, 74, 0.3);
        }
        
        .password-strength {
            height: 4px;
            border-radius: 2px;
            transition: all 0.3s ease;
        }
        
        .strength-weak { background-color: #ef4444; width: 25%; }
        .strength-fair { background-color: #f59e0b; width: 50%; }
        .strength-good { background-color: #3b82f6; width: 75%; }
        .strength-strong { background-color: #16a34a; width: 100%; }
        
        /* Gender selection styles */
        .gender-option {
            transition: all 0.3s ease;
        }
        
        .gender-option:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .gender-option input:checked + span {
            font-weight: 600;
        }
        
        /* Date input styling for Vietnamese format */
        input[type="date"] {
            position: relative;
        }
        
        input[type="date"]::-webkit-calendar-picker-indicator {
            background: transparent;
            bottom: 0;
            color: transparent;
            cursor: pointer;
            height: auto;
            left: 0;
            position: absolute;
            right: 0;
            top: 0;
            width: auto;
        }
        
        /* Responsive adjustments */
        @@media (max-width: 1024px) {
            .grid.lg\\:grid-cols-2 {
                grid-template-columns: 1fr;
            }
        }
    </style>
    
    <script>
        // Password strength checker
        function checkPasswordStrength(password) {
            const strengthBar = document.querySelector('.password-strength');
            const strengthText = document.getElementById('passwordStrengthText');
            
            let strength = 0;
            let strengthLabel = '';
            
            if (password.length >= 8) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;
            
            switch (strength) {
                case 0:
                case 1:
                    strengthBar.className = 'password-strength strength-weak';
                    strengthLabel = 'Mật khẩu yếu';
                    break;
                case 2:
                    strengthBar.className = 'password-strength strength-fair';
                    strengthLabel = 'Mật khẩu trung bình';
                    break;
                case 3:
                case 4:
                    strengthBar.className = 'password-strength strength-good';
                    strengthLabel = 'Mật khẩu tốt';
                    break;
                case 5:
                    strengthBar.className = 'password-strength strength-strong';
                    strengthLabel = 'Mật khẩu mạnh';
                    break;
            }
            
            strengthText.textContent = strengthLabel;
        }
        
        // Gender selection
        document.querySelectorAll('input[name="Gender"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Remove all active states
                document.querySelectorAll('.gender-option').forEach(option => {
                    option.classList.remove('border-primary', 'bg-primary', 'text-white', 'shadow-md');
                    option.classList.add('border-gray-300', 'text-gray-700');
                });
                
                // Add active state to selected option
                if (this.checked) {
                    this.parentElement.classList.add('border-primary', 'bg-primary', 'text-white', 'shadow-md');
                    this.parentElement.classList.remove('border-gray-300', 'text-gray-700');
                }
            });
        });
        
        // Form submission loading state
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.textContent = 'Đang tạo tài khoản...';
            submitBtn.disabled = true;
        });
        
        // Password strength checker on input
        document.getElementById('Password').addEventListener('input', function() {
            checkPasswordStrength(this.value);
        });
        
        // Auto-focus first input
        document.getElementById('Username').focus();
        
        // Date format handling for Vietnamese locale
        document.addEventListener('DOMContentLoaded', function() {
            // Set date input to Vietnamese format
            const dateInput = document.querySelector('input[type="date"]');
            if (dateInput) {
                // Add event listener for date change
                dateInput.addEventListener('change', function() {
                    if (this.value) {
                        // Convert to Vietnamese format display
                        const date = new Date(this.value);
                        const day = String(date.getDate()).padStart(2, '0');
                        const month = String(date.getMonth() + 1).padStart(2, '0');
                        const year = date.getFullYear();
                        
                        // Update label to show Vietnamese format
                        const label = this.nextElementSibling;
                        if (label && label.textContent === 'Ngày sinh') {
                            label.textContent = `Ngày sinh (${day}/${month}/${year})`;
                        }
                    }
                });
            }
        });
    </script>
}
